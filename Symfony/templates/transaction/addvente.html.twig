                        {% extends 'base.html.twig' %}

{% block title %}Hello TransactionController!{% endblock %}
        


{% block body %}


	<div class="container ">
		<div class="row justify-content-center align-items-center">
			<div class="col-md-4">
				<div class="card mb-3 mt-3" style="background-color: #100f0f; color: #efefef">
					<div class="card-body">
						<div class="card-header mb-3"><b>Créer une vente</b></div>
                            <form method="POST" >
                                <label> Crypto </label><br>
                                <input type="text" value="{{TransactionID.name}}" name="name" readonly ><br>
                                <label> Quantité </label><br>
                                <input type="float" value="{{TransactionID.quantity}}" name="quantity" readonly ><br>
                                <label> Prix d'achat </label><br>
                                <input type="float" value="{{TransactionID.price}}" id="prixAchat" name="prixAchat" readonly ><br>
                                <label> Prix de vente </label><br>
                                <input type="float" id="prixVente" name="prixVente" value="{{ crypto[3] }}"><br>
                            <br>
                                <input type="submit" value="Vendre">
                            </form>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
                        
                           